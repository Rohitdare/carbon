# Blue Carbon MRV Blockchain Environment Variables

# Network Configuration
FABRIC_NETWORK_NAME=carbon-credits-network
CHANNEL_NAME=carbon-credits-channel
CHAINCODE_NAME=carbon-credits
CHAINCODE_VERSION=1.0

# Organization Configuration
GOVERNMENT_ORG=GovernmentMSP
NGO_ORG=NGOMSP
VERIFIER_ORG=VerifierMSP

# Peer Configuration
GOVERNMENT_PEER=peer0.government.example.com:7051
NGO_PEER=peer0.ngo.example.com:9051
VERIFIER_PEER=peer0.verifier.example.com:11051

# Orderer Configuration
ORDERER_ADDRESS=orderer.example.com:7050
ORDERER_TLS_CERT=/opt/gopath/src/github.com/hyperledger/fabric/peer/crypto/ordererOrganizations/example.com/orderers/orderer.example.com/msp/tlscacerts/tlsca.example.com-cert.pem

# Certificate Paths
GOVERNMENT_TLS_CERT=/opt/gopath/src/github.com/hyperledger/fabric/peer/crypto/peerOrganizations/government.example.com/peers/peer0.government.example.com/tls/server.crt
GOVERNMENT_TLS_KEY=/opt/gopath/src/github.com/hyperledger/fabric/peer/crypto/peerOrganizations/government.example.com/peers/peer0.government.example.com/tls/server.key
GOVERNMENT_TLS_ROOTCERT=/opt/gopath/src/github.com/hyperledger/fabric/peer/crypto/peerOrganizations/government.example.com/peers/peer0.government.example.com/tls/ca.crt

# MSP Configuration
GOVERNMENT_MSP_PATH=/opt/gopath/src/github.com/hyperledger/fabric/peer/crypto/peerOrganizations/government.example.com/users/Admin@government.example.com/msp
NGO_MSP_PATH=/opt/gopath/src/github.com/hyperledger/fabric/peer/crypto/peerOrganizations/ngo.example.com/users/Admin@ngo.example.com/msp
VERIFIER_MSP_PATH=/opt/gopath/src/github.com/hyperledger/fabric/peer/crypto/peerOrganizations/verifier.example.com/users/Admin@verifier.example.com/msp

# Logging Configuration
FABRIC_LOGGING_SPEC=INFO
CORE_PEER_TLS_ENABLED=true

# Docker Configuration
DOCKER_SOCKET=/var/run/docker.sock
DOCKER_NETWORK=carbon-credits-network

# Development Configuration
DEVELOPMENT_MODE=true
DEBUG_MODE=false

